{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "decision.schema.json",
  "title": "DecisionPoint",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "run_id",
    "decision_id",
    "turn_index",
    "player_id",
    "decision_type",
    "state",
    "legal_actions"
  ],
  "properties": {
    "schema_version": { "type": "string", "const": "v1" },
    "run_id": { "type": "string" },
    "decision_id": { "type": "string" },
    "turn_index": { "type": "integer", "minimum": 0 },
    "player_id": { "type": "string" },
    "decision_type": {
      "type": "string",
      "enum": [
        "PRE_ROLL",
        "POST_LAND",
        "JAIL_DECISION",
        "BUY_OR_AUCTION_DECISION",
        "AUCTION_BID",
        "END_TURN",
        "TRADE_RESPONSE"
      ]
    },
    "state": { "$ref": "state.schema.json" },
    "legal_actions": {
      "type": "array",
      "minItems": 1,
      "items": {
        "oneOf": [
          {
            "type": "object",
            "additionalProperties": false,
            "required": ["action", "args_schema"],
            "properties": {
              "action": { "const": "ROLL_DICE" },
              "args_schema": {
                "type": "object",
                "additionalProperties": false,
                "required": ["type", "additionalProperties"],
                "properties": {
                  "type": { "const": "object" },
                  "additionalProperties": { "const": false }
                }
              },
              "ui_hints": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "highlight_space_indices": {
                    "type": "array",
                    "items": { "type": "integer", "minimum": 0, "maximum": 39 }
                  }
                }
              }
            }
          },
          {
            "type": "object",
            "additionalProperties": false,
            "required": ["action", "args_schema"],
            "properties": {
              "action": { "const": "buy_property" },
              "args_schema": {
                "type": "object",
                "additionalProperties": false,
                "required": ["type", "additionalProperties"],
                "properties": {
                  "type": { "const": "object" },
                  "additionalProperties": { "const": false }
                }
              },
              "ui_hints": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "highlight_space_indices": {
                    "type": "array",
                    "items": { "type": "integer", "minimum": 0, "maximum": 39 }
                  }
                }
              }
            }
          },
          {
            "type": "object",
            "additionalProperties": false,
            "required": ["action", "args_schema"],
            "properties": {
              "action": { "const": "start_auction" },
              "args_schema": {
                "type": "object",
                "additionalProperties": false,
                "required": ["type", "additionalProperties"],
                "properties": {
                  "type": { "const": "object" },
                  "additionalProperties": { "const": false }
                }
              },
              "ui_hints": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "highlight_space_indices": {
                    "type": "array",
                    "items": { "type": "integer", "minimum": 0, "maximum": 39 }
                  }
                }
              }
            }
          },
          {
            "type": "object",
            "additionalProperties": false,
            "required": ["action", "args_schema"],
            "properties": {
              "action": { "const": "pay_jail_fine" },
              "args_schema": {
                "type": "object",
                "additionalProperties": false,
                "required": ["type", "additionalProperties"],
                "properties": {
                  "type": { "const": "object" },
                  "additionalProperties": { "const": false }
                }
              },
              "ui_hints": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "highlight_space_indices": {
                    "type": "array",
                    "items": { "type": "integer", "minimum": 0, "maximum": 39 }
                  }
                }
              }
            }
          },
          {
            "type": "object",
            "additionalProperties": false,
            "required": ["action", "args_schema"],
            "properties": {
              "action": { "const": "use_get_out_of_jail_card" },
              "args_schema": {
                "type": "object",
                "additionalProperties": false,
                "required": ["type", "additionalProperties"],
                "properties": {
                  "type": { "const": "object" },
                  "additionalProperties": { "const": false }
                }
              },
              "ui_hints": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "highlight_space_indices": {
                    "type": "array",
                    "items": { "type": "integer", "minimum": 0, "maximum": 39 }
                  }
                }
              }
            }
          },
          {
            "type": "object",
            "additionalProperties": false,
            "required": ["action", "args_schema"],
            "properties": {
              "action": { "const": "roll_for_doubles" },
              "args_schema": {
                "type": "object",
                "additionalProperties": false,
                "required": ["type", "additionalProperties"],
                "properties": {
                  "type": { "const": "object" },
                  "additionalProperties": { "const": false }
                }
              },
              "ui_hints": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "highlight_space_indices": {
                    "type": "array",
                    "items": { "type": "integer", "minimum": 0, "maximum": 39 }
                  }
                }
              }
            }
          },
          {
            "type": "object",
            "additionalProperties": false,
            "required": ["action", "args_schema"],
            "properties": {
              "action": { "const": "END_TURN" },
              "args_schema": {
                "type": "object",
                "additionalProperties": false,
                "required": ["type", "additionalProperties"],
                "properties": {
                  "type": { "const": "object" },
                  "additionalProperties": { "const": false }
                }
              },
              "ui_hints": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "highlight_space_indices": {
                    "type": "array",
                    "items": { "type": "integer", "minimum": 0, "maximum": 39 }
                  }
                }
              }
            }
          },
          {
            "type": "object",
            "additionalProperties": false,
            "required": ["action", "args_schema"],
            "properties": {
              "action": { "const": "NOOP" },
              "args_schema": {
                "type": "object",
                "additionalProperties": false,
                "required": ["type", "additionalProperties", "required", "properties"],
                "properties": {
                  "type": { "const": "object" },
                  "additionalProperties": { "const": false },
                  "required": {
                    "type": "array",
                    "minItems": 1,
                    "maxItems": 1,
                    "items": { "const": "reason" }
                  },
                  "properties": {
                    "type": "object",
                    "additionalProperties": false,
                    "required": ["reason"],
                    "properties": {
                      "reason": {
                        "type": "object",
                        "additionalProperties": false,
                        "required": ["type"],
                        "properties": {
                          "type": { "const": "string" }
                        }
                      }
                    }
                  }
                }
              },
              "ui_hints": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "highlight_space_indices": {
                    "type": "array",
                    "items": { "type": "integer", "minimum": 0, "maximum": 39 }
                  }
                }
              }
            }
          }
        ]
      }
    }
  }
}
