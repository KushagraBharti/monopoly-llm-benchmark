{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "state.schema.json",
  "title": "StateSnapshot",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "run_id",
    "turn_index",
    "phase",
    "active_player_id",
    "players",
    "bank",
    "board"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "v1"
    },
    "run_id": {
      "type": "string"
    },
    "turn_index": {
      "type": "integer",
      "minimum": 0
    },
    "phase": {
      "type": "string",
      "enum": [
        "START_TURN",
        "RESOLVING_MOVE",
        "AWAITING_DECISION",
        "END_TURN",
        "GAME_OVER"
      ]
    },
    "active_player_id": {
      "type": "string"
    },
    "players": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "player_id",
          "name",
          "cash",
          "position",
          "in_jail",
          "jail_turns",
          "doubles_count",
          "bankrupt",
          "bankrupt_to",
          "get_out_of_jail_cards"
        ],
        "properties": {
          "player_id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "cash": {
            "type": "integer"
          },
          "position": {
            "type": "integer",
            "minimum": 0,
            "maximum": 39
          },
          "in_jail": {
            "type": "boolean"
          },
          "jail_turns": {
            "type": "integer",
            "minimum": 0
          },
          "doubles_count": {
            "type": "integer",
            "minimum": 0
          },
          "bankrupt": {
            "type": "boolean"
          },
          "bankrupt_to": {
            "type": ["string", "null"]
          },
          "get_out_of_jail_cards": {
            "type": "integer",
            "minimum": 0
          }
        }
      }
    },
    "bank": {
      "type": "object",
      "additionalProperties": false,
      "required": ["houses_remaining", "hotels_remaining"],
      "properties": {
        "houses_remaining": {
          "type": "integer",
          "minimum": 0
        },
        "hotels_remaining": {
          "type": "integer",
          "minimum": 0
        }
      }
    },
    "board": {
      "type": "array",
      "minItems": 40,
      "maxItems": 40,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "index",
          "kind",
          "name",
          "group",
          "price",
          "owner_id",
          "mortgaged",
          "houses",
          "hotel"
        ],
        "properties": {
          "index": {
            "type": "integer",
            "minimum": 0,
            "maximum": 39
          },
          "kind": {
            "type": "string",
            "enum": [
              "GO",
              "PROPERTY",
              "RAILROAD",
              "UTILITY",
              "TAX",
              "CHANCE",
              "COMMUNITY_CHEST",
              "JAIL",
              "GO_TO_JAIL",
              "FREE_PARKING"
            ]
          },
          "name": {
            "type": "string"
          },
          "group": {
            "type": ["string", "null"]
          },
          "price": {
            "type": ["integer", "null"]
          },
          "owner_id": {
            "type": ["string", "null"]
          },
          "mortgaged": {
            "type": "boolean"
          },
          "houses": {
            "type": "integer",
            "minimum": 0,
            "maximum": 4
          },
          "hotel": {
            "type": "boolean"
          }
        }
      }
    },
    "auction": {
      "type": ["object", "null"],
      "additionalProperties": false,
      "required": [
        "property_space_key",
        "current_high_bid",
        "current_leader_player_id",
        "active_bidders_player_ids",
        "current_bidder_player_id",
        "initiator_player_id"
      ],
      "properties": {
        "property_space_key": {
          "type": "string"
        },
        "current_high_bid": {
          "type": "integer",
          "minimum": 0
        },
        "current_leader_player_id": {
          "type": ["string", "null"]
        },
        "active_bidders_player_ids": {
          "type": "array",
          "items": { "type": "string" }
        },
        "current_bidder_player_id": {
          "type": ["string", "null"]
        },
        "initiator_player_id": {
          "type": "string"
        }
      }
    },
    "trade": {
      "type": ["object", "null"],
      "additionalProperties": false,
      "required": [
        "initiator_player_id",
        "counterparty_player_id",
        "max_exchanges",
        "exchange_index",
        "history_last_2",
        "current_offer"
      ],
      "properties": {
        "initiator_player_id": { "type": "string" },
        "counterparty_player_id": { "type": "string" },
        "max_exchanges": { "type": "integer", "minimum": 1 },
        "exchange_index": { "type": "integer", "minimum": 0 },
        "history_last_2": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["from_player_id", "offer", "request"],
            "properties": {
              "from_player_id": { "type": "string" },
              "offer": {
                "type": "object",
                "additionalProperties": false,
                "required": ["cash", "properties", "get_out_of_jail_cards"],
                "properties": {
                  "cash": { "type": "integer", "minimum": 0 },
                  "properties": {
                    "type": "array",
                    "items": { "type": "string" }
                  },
                  "get_out_of_jail_cards": { "type": "integer", "minimum": 0 }
                }
              },
              "request": {
                "type": "object",
                "additionalProperties": false,
                "required": ["cash", "properties", "get_out_of_jail_cards"],
                "properties": {
                  "cash": { "type": "integer", "minimum": 0 },
                  "properties": {
                    "type": "array",
                    "items": { "type": "string" }
                  },
                  "get_out_of_jail_cards": { "type": "integer", "minimum": 0 }
                }
              }
            }
          }
        },
        "current_offer": {
          "type": "object",
          "additionalProperties": false,
          "required": ["offer", "request"],
          "properties": {
            "offer": {
              "type": "object",
              "additionalProperties": false,
              "required": ["cash", "properties", "get_out_of_jail_cards"],
              "properties": {
                "cash": { "type": "integer", "minimum": 0 },
                "properties": {
                  "type": "array",
                  "items": { "type": "string" }
                },
                "get_out_of_jail_cards": { "type": "integer", "minimum": 0 }
              }
            },
            "request": {
              "type": "object",
              "additionalProperties": false,
              "required": ["cash", "properties", "get_out_of_jail_cards"],
              "properties": {
                "cash": { "type": "integer", "minimum": 0 },
                "properties": {
                  "type": "array",
                  "items": { "type": "string" }
                },
                "get_out_of_jail_cards": { "type": "integer", "minimum": 0 }
              }
            }
          }
        }
      }
    },
    "derived": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "net_worth_estimate_by_player": {
          "type": "object",
          "additionalProperties": {
            "type": "integer"
          }
        },
        "monopolies_by_player": {
          "type": "object",
          "additionalProperties": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    }
  }
}
